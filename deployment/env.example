# joj达电梯科技 - 部署环境变量配置

# 域名配置
DOMAIN=ailingjing.cn

# 服务器配置
SERVER_USER=your_username
SERVER_IP=your_server_ip

# 数据库配置
DB_ROOT_PASSWORD=your_strong_root_password_here
DB_PASSWORD=your_strong_db_password_here

# API 配置
API_URL=https://ailingjing.cn/api
NODE_ENV=production

# SSL 证书路径（如果使用自签名证书）
SSL_CERT_PATH=/etc/ssl/certs/ailingjing.cn.crt
SSL_KEY_PATH=/etc/ssl/private/ailingjing.cn.key

# 备份配置
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# 监控配置
MONITORING_ENABLED=true
LOG_LEVEL=info

# 邮件配置（用于通知）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@ailingjing.cn
SMTP_PASSWORD=your_smtp_password

# CDN 配置（如果使用）
CDN_URL=https://cdn.ailingjing.cn

# 安全配置
CSRF_SECRET=your_csrf_secret_here
JWT_SECRET=your_jwt_secret_here

# 第三方服务配置
ANALYTICS_ID=your_analytics_id 